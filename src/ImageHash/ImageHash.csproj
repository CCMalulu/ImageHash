<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- do not manually update version, this will be done using appvayor -->
    <Version>1.1.1</Version>
    <Description>Perceptual image hashing in netstandard using the ImageSharp library. Currently contains two algorithms (DifferenceHash, and AverageHash).</Description>
    <Authors>Coen van den Munckhof</Authors>
    <TargetFrameworks>netstandard1.3;netstandard2.0</TargetFrameworks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>CoenM.ImageSharp</RootNamespace>
    <AssemblyName>CoenM.ImageSharp.ImageHash</AssemblyName>
    <PackageId>CoenM.ImageSharp.ImageHash</PackageId>
    <PackageTags>ImageHash;DifferenceHash;AverageHash;Imaging;ImageSharp</PackageTags>
    <PackageProjectUrl>https://github.com/coenm/ImageHash/</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/coenm/ImageHash.git</RepositoryUrl>
  <!-- </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'"> -->
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="11.1.0" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0003" />
  </ItemGroup>

</Project>
